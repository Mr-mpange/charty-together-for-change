# Backend environment variables for Charty

# Server
PORT=3001
# Comma-separated list of allowed origins for CORS
CORS_ORIGIN=http://localhost:5173,http://127.0.0.1:5173

# Organization
ORG_NAME=Charty
SUPPORT_EMAIL=support@example.com
# Send acknowledgement email to the contact sender (true/false)
SEND_ACK=true

# SMTP (Email). If not set, emails are skipped and only logged to console
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
